#!/usr/bin/ruby

if Process.uid == 0
  puts 'Do not use sudo to run `macos`'
  abort
end

system 'sudo -v'

puts
print 'Applying macOS defaults'

Dir[File.expand_path('../macos/**/*.bash', File.dirname(__FILE__))].each do |path|
  if system path
    print '.'
  else
    print %Q( \033[31m#{File.basename(path)}\033[0m )
  end
end

puts
puts 'Finished.'
puts
