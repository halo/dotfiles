{
  // ------ WINDOW ------
  "window.nativeTabs": true,
  "window.openFoldersInNewWindow": "on",
  //
  // ------ EDITOR ------
  "editor.codeLens": false,
  "editor.fontFamily": "'Hack Nerd Font Mono', Menlo, Monaco, monospace",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.detectIndentation": false,
  "editor.folding": false,
  "editor.guides.indentation": false,
  "editor.multiCursorLimit": 20000,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.includeStrings": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    100
  ],
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  // Ideally, when toggled on, I prefer "bounded".
  // But the default must be off, so I choose "off" here.
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 100,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.codeActionsOnSave": {},
  "editor.accessibilitySupport": "off",
  //
  // ------ WORKBENCH ------
  "workbench.colorTheme": "GitHub Dark High Contrast",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  // Closing a tab selectes the neighboring tab, not one recently used.
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  //
  // ------ EXPLORER ------
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.confirmUndo": "verbose",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock",
    "*_component.rb": "${capture}_component.*",
    "Gemfile": "Gemfile.lock"
  },
  //
  // ------ FILES ------
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    ".history/": true,
    ".sass-cache/": true
  },
  //
  // ------ LANGUAGES ------
  "[ruby]": {
    "editor.defaultFormatter": "rubocop.vscode-rubocop",
  },
  "[xml]": {
    "editor.defaultFormatter": "mikeburgh.xml-format"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  //
  // ------ EXTENSION vscode-rubocop -------
  "rubocop.mode": "onlyRunGlobally",
  //
  // ------ OTHER ------
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",
  "hediet.vscode-drawio.resizeImages": null,
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.banner": "never",
  "extensions.ignoreRecommendations": true,
  "telemetry.telemetryLevel": "off",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "code-eol.color": "#444",
  "workbench.editor.empty.hint": "hidden",
  "workbench.activityBar.location": "hidden",
  "workbench.layoutControl.enabled": false,
  "window.customTitleBarVisibility": "never",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.editor.enableAutoCompletions": true,
  "files.associations": {
    "*.sass": "sass"
  },
  "scm.experimental.showHistoryGraph": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "rubyLsp.featureFlags": {
    "all": true
  },
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "github.copilot.editor.enableCodeActions": false,
  // Copilot
  "inlineChat.lineNaturalLanguageHint": false,
  "accessibility.verbosity.inlineChat": false,
  "security.promptForLocalFileProtocolHandling": false,
  "git.blame.editorDecoration.enabled": false,
  "go.lintOnSave": "off",
  "git.openRepositoryInParentFolders": "always",
  "testing.followRunningTest": true,
  "terminal.integrated.defaultProfile.osx": "zsh"
}
