{
  "editor.detectIndentation": false,
  "editor.folding": false,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.rulers": [
    120
  ],
  "editor.tabSize": 2,
  // Ideally, when toggled on, I prefer "bounded".
  // But the default must be off, so I choose "off" here.
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 120,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "ruby.codeCompletion": "rcodetools",
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",
  "ruby.interpreter.commandPath": "~/.rbenv/shims/ruby",
  "ruby.lint": {
    "rubocop": true
  },
  "ruby.useLanguageServer": true,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "window.nativeTabs": true,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#333333"
  },
  // Closing a tab selectes the neighboring tab, not one recently used.
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "window.zoomLevel": 0,
  "gitlens.blame.highlight.enabled": false,
  "gitlens.blame.heatmap.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.mode.active": "zen",
  "gitlens.menus.editorGroup.compare": false,
  "gitlens.menus.editorGroup.blame": false,
  "explorer.autoReveal": false
}
